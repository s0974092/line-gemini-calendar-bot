# LINE Bot
LINE_CHANNEL_SECRET=
LINE_CHANNEL_ACCESS_TOKEN=

# Google Gemini API
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Google Calendar API
# Using OAuth 2.0 Client ID for a user's primary calendar
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# [Optional] The display name of the calendar to use (e.g., "Family", "Work").
# If set, the bot will search for this calendar and use it.
# If this calendar is not found, or if this value is left empty, it will default to the "primary" calendar.
TARGET_CALENDAR_NAME=

# Security
# Comma-separated list of allowed LINE User IDs
USER_WHITELIST=

# Redis
# Redis connection string. Used to store the bot's conversation state for multi-turn conversations.
# Typically provided by a Redis service provider (e.g., Redis Cloud, Upstash), or points to a local Redis instance.
REDIS_URL=
